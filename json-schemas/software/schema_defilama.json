  "$id": "https://defillama.com/hacks",
  "type": "array",
  "default": [],
  "title": "Schema for Defilama hacks",
  "items": {
    "type": "object",
    "title": "Hack schema",
    "required": [
      "name",
      "date",
      "chains",
      "classification",
      "technique",
      "lin",
      "amount lost"
    ],
    "properties": {
      "name": {
        "type": "string",
        "title": "The name Schema",
        "examples": [
          "Orion",
          "Midas Capital",
          "Harmony Bridge"
        ]
      },
      "date": {
        "type": "string",
        "title": "The date Schema",
        "examples": [
          "2 Feb, 2023",
          "17 Jan, 2023",
          "23 Jun, 2022"
        ]
      },
      "chains": {
        "type": "string",
        "title": "The chains Schema",
        "examples": [
          "BSC",
          "Polygon",
          "Ethereum/BSC"
        ]
      },
      "classification": {
        "type": "string",
        "title": "The classification Schema",
        "examples": [
          "Protocol Logic",
          "Ecosystem",
          "Infrastructure"
        ]
      },
      "technique": {
        "type": "string",
        "title": "The technique Schema",
        "examples": [
          "Contract Vulnerability",
          "Flashloan Reentrancy Attack",
          "Private Key Compromised (Unknown Method)"
        ]
      },
      "lin": {
        "type": "string",
        "title": "The lin Schema",
